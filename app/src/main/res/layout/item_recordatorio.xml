<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Nombre del medicamento -->
        <TextView
            android:id="@+id/text_nombre_medicamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_blue"
            android:text="Nombre del Medicamento"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Descripción -->
        <TextView
            android:id="@+id/text_descripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción breve"
            android:textSize="12sp" />

        <!-- Dosis y Método de Administración -->
        <TextView
            android:id="@+id/text_dosis_metodo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dosis y Método"
            android:textSize="12sp" />

        <!-- Frecuencia y Hora de Inicio -->
        <TextView
            android:id="@+id/text_frecuencia_hora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frecuencia y Hora de Inicio"
            android:textSize="12sp" />

        <!-- Duración del Tratamiento -->
        <TextView
            android:id="@+id/text_duracion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duración del Tratamiento"
            android:textSize="12sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
